<?xml version="1.0" encoding="utf-8"?>
<TableRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sessions_table_row"
    android:weightSum="5">
    <TextView
        android:id="@+id/new_session_row_date"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Date"
        android:fontFamily="@font/font_family"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:maxWidth="80dp"
        android:singleLine="true"
        android:padding="8dp" />

    <TextView
        android:id="@+id/new_session_row_start_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Start Time"
        android:fontFamily="@font/font_family"
        android:singleLine="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="8dp" />

    <TextView
        android:id="@+id/new_session_row_end_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="End Time"
        android:fontFamily="@font/font_family"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:singleLine="true"
        android:gravity="center"
        android:padding="8dp" />

    <Button
        android:id="@+id/new_session_row_status"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@color/black"
        android:fontFamily="@font/font_family"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"
        android:backgroundTint="@color/purple"
        android:padding="8dp" />

    <Button
        android:id="@+id/new_session_row_details"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Details"
        android:fontFamily="@font/font_family"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="8dp"
        android:backgroundTint="@color/purple" />
</TableRow>